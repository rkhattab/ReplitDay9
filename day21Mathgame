import random

print("Math Game!\n")
# Ask the user for their multiples and store it in a variable
multiples = int(input("Name your multiples: "))
#Create multiple postive message to randomly select throughout the game
positive_messages = ["Great work!", "Awesome!", "You're a math genius!", "Correct", "Brilliant", "Keep it up!", "You are on a roll!", "Impressive","You're a math wizzzz"]
# Initialize a variable to keep track of the number of correct answers
correct_answers = 0
# Loop through the multiplication table from 1 to 10
for i in range(1, 11):
  # Ask the user for the answer to the multiplication question
  #f"{i} X {multiples} = ": This is an f-string, a formatted string that allows you to embed variables within curly braces {}. It constructs a prompt or message by combining the values of i and multiples. For example, if i is 5 and multiples is [10, 15, 20], the prompt could be "5 X [10, 15, 20] = ".
  answer = int(input(f"{i} X {multiples} = "))
  # Check if the answer is correct
  if answer == i * multiples:
    # If the answer is correct, print a message and increment the correct_answers variable
    print(random.choice(positive_messages))
    print()
    correct_answers += 1
  else:
    # If the answer is incorrect, print a message and provide the correct answer
    print(f"Nope. The answer was {i * multiples}.")
    print()

# Print a message with the number of correct answers
print()
print("-----------" + "\n")
print("You scored", correct_answers, "out of 10.")
